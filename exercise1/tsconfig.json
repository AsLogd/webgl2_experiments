{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2017", "es2020"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"baseUrl": "./src/",
		"skipLibCheck": true,
		"sourceMap": false
	},
	"include": [
		"./src/**/*"
	]
}